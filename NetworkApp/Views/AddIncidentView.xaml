<UserControl x:Class="NetworkApp.Views.AddIncidentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkApp.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:cal="http://www.caliburnproject.org"
             cal:Message.Attach="[Gesture F3] = [FindNextGestureKey]"
             mc:Ignorable="d" Background="White" FontSize="15"
              d:DesignHeight="650" d:DesignWidth="1020">

    
                 <Grid>

                    <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                     
                    <!--<Grid Grid.Column="0" Margin="25 20 25 20">-->

                        <DockPanel Grid.Row="0" Margin="20">
                           <Label HorizontalContentAlignment="Left" VerticalAlignment="Center" Margin="15" Width="150" FontSize="18" Content="Date d'Incident :"/>
                           <DatePicker x:Name="IncidentDate" Width="Auto" MaxWidth="400"   materialDesign:HintAssist.Hint="Choissier une Date" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                        </DockPanel>
                        
                        
                        <DockPanel Grid.Row="1" Margin="20" >
                           <Label HorizontalContentAlignment="Left" VerticalAlignment="Center" Margin="15" Width="150" FontSize="18"  Content="Direction :"/>
                             <ComboBox x:Name="Direction" Width="Auto" MaxWidth="400"  materialDesign:HintAssist.Hint="-- Choissier la direction --" materialDesign:HintAssist.FloatingScale="3.5">
                                   <ComboBoxItem >
                                         Cliental
                                   </ComboBoxItem>
                                   <ComboBoxItem>
                                         assinissement
                                   </ComboBoxItem>                                             
                             </ComboBox>

                        </DockPanel>


                        <DockPanel Grid.Row="2" Margin="20" >
                            <Label HorizontalContentAlignment="Left" VerticalAlignment="Center" Margin="15" Width="150" FontSize="18"  Content="Site"/>
                             <ComboBox x:Name="Site"  Width="Auto" MaxWidth="400" IsEditable="True" materialDesign:HintAssist.Hint="-- Choissier la Site --" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                                  <ComboBoxItem  >
                                                        bachdjerrah
                                                  </ComboBoxItem>
                                                  <ComboBoxItem>
                                                        ruisseau
                                                  </ComboBoxItem>
                                                    <ComboBoxItem>
                                                        heussinday
                                                    </ComboBoxItem>
                                                    <ComboBoxItem>
                                                        rv2000
                                                    </ComboBoxItem>
                                                    <ComboBoxItem>
                                                        ainbenian
                                                    </ComboBoxItem>
                                                    <ComboBoxItem>
                                                        reghia
                                                    </ComboBoxItem>
                                                    <ComboBoxItem>
                                                        prise deau
                                                    </ComboBoxItem>

                              </ComboBox>
                        </DockPanel>

                        <DockPanel Grid.Row="3" Margin="20" >
                            <Label HorizontalContentAlignment="Left" VerticalAlignment="Center" Margin="15" Width="150" FontSize="18" Content="Nature d'incident"/>
                            <ComboBox x:Name="Nature" Width="Auto" MaxWidth="400" materialDesign:HintAssist.Hint="-- Choissier la Nature --">
                                <ComboBoxItem  >
                                    deconnexion
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    perturbation
                                </ComboBoxItem>

                            </ComboBox>

                        </DockPanel>


                        <DockPanel Grid.Row="4" Margin="20" >
                            <Label HorizontalContentAlignment="Left" VerticalAlignment="Center" Margin="15" Width="150" FontSize="18" Content="origin"/>
                            <ComboBox x:Name="Origin" Width="Auto" MaxWidth="400" materialDesign:HintAssist.Hint="-- Choissier l'origin --">
                                <ComboBoxItem >
                                    interne
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    externe
                                </ComboBoxItem>

                            </ComboBox>

                        </DockPanel>

                        <DockPanel Grid.Row="5" Margin="20" >
                            <Label HorizontalContentAlignment="Left" VerticalAlignment="Center" Margin="15" Width="150" FontSize="18" Content="Operateur"/>
                            <ComboBox x:Name="Operateur" materialDesign:HintAssist.Hint="-- Choissier l'operateur --" Width="Auto" MaxWidth="400">
                                <ComboBoxItem >
                                    AT
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    SLC
                                </ComboBoxItem>

                            </ComboBox>

                        </DockPanel>



                    <!--</Grid>-->


                    <Separator Height="5"  Background="Black" Margin="0 20 0 40" Grid.RowSpan="6"  Grid.Column="1" Style="{StaticResource MaterialDesignDarkSeparator}" >
                        <Separator.LayoutTransform>
                            <RotateTransform Angle="90" />
                        </Separator.LayoutTransform>
                    </Separator>




                   


                                    <DockPanel Margin="20,20,20,0" Grid.Row="0" Grid.Column="2" >
                                        <Label Margin="15" Width="150" FontSize="18" HorizontalContentAlignment="Center" VerticalAlignment="Center" Content="Solution : "/>
                                        <TextBox x:Name="Solution"
                                            Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                                            Height="Auto"
                                            MaxHeight="150"
                                            TextWrapping="Wrap"
                                            VerticalScrollBarVisibility="Auto"
                                            materialDesign:HintAssist.Hint="Solution de l'incident" />
                               

                                    </DockPanel>

                                    <DockPanel Margin="20" Grid.Row="1" Grid.Column="2">
                                        <Label Margin="15" Width="150" FontSize="18" HorizontalContentAlignment="Center" VerticalAlignment="Center" Content="Date de cloture :"/>
                                        <DatePicker x:Name="ClotureDate" Width="Auto" MaxWidth="400"   materialDesign:HintAssist.Hint="Choissier la Date de Cloturation" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

                                    </DockPanel>

                       
                                        <CheckBox x:Name="isCloture" Margin="90,35,0,35" Grid.Row="2"  Grid.Column="2" IsThreeState="False">
                                            incident pas encore cloturer
                                        </CheckBox>
                                        <Button x:Name="AddIncident" Content="Ajouter" FontSize="22" Margin="0 20 50 0" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="6" Grid.Column="2" Width="Auto" MinWidth="180" MaxWidth="220" Height="Auto" MinHeight="50" MaxHeight="60"   />

                        



                   
                     

                 </Grid> 
</UserControl>
