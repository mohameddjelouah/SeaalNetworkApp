                    <TextBlock FontSize="12" Width="30" TextWrapping="Wrap"  
                            Text="{Binding Path=LabelContent}"/>
                </DataTemplate>

                <Style TargetType="Line" x:Key="AxisStyle">
                    <Setter Property="Stroke" Value="#576574"  />
                    <Setter Property="StrokeThickness" Value="1"/>
                </Style>


            </materialDesign:Card.Resources>

            <chart:SfChart x:Name="SplineAreaChart" AreaBorderThickness="0" Margin="10" 
                       HorizontalAlignment="Center"  VerticalAlignment="Center">

                <chart:SfChart.Header>
                    <TextBlock FontSize="16" 
                           Margin="0,0,0,5">Nombre d'incidents</TextBlock>
                </chart:SfChart.Header>

                <chart:SfChart.PrimaryAxis>
                    <chart:CategoryAxis  
                                    LabelFormat="MMM yyyy" 
                                    LabelPlacement="OnTicks"              
                                    MajorGridLineStyle="{x:Null}"    
                                    EdgeLabelsDrawingMode="Fit"
                                    LabelTemplate="{StaticResource labelTemplate}"          
                                    AxisLineStyle="{StaticResource AxisStyle}"
                                    MajorTickLineStyle="{StaticResource AxisStyle}">

                    </chart:CategoryAxis>
                </chart:SfChart.PrimaryAxis>

                <chart:SfChart.SecondaryAxis>
                    <chart:NumericalAxis 
                                     RangePadding="None"
                                     Minimum="0"
                                     PlotOffset="10"                                    
                                     LabelTemplate="{StaticResource labelTemplate}" 
                                     AxisLineStyle="{StaticResource AxisStyle}"
                                     MajorTickLineStyle="{x:Null}">
                    </chart:NumericalAxis>
                </chart:SfChart.SecondaryAxis>

                <chart:SplineAreaSeries  x:Name="SplineAreaSeries" EnableAnimation="True"
                              XBindingPath="IncidentsDate" 
                              Label="Nombre d'incident"
                              YBindingPath="IncidentCount" 
                              ItemsSource="{Binding IncidentChart}" 
                              ShowTooltip="True" 
                              StrokeThickness="2"
                              Stroke="#FF1BA1E2"
                              Interior="#781BA1E2">

                    <chart:SplineAreaSeries.AdornmentsInfo>
                        <chart:ChartAdornmentInfo AdornmentsPosition="Bottom"  
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              ShowLabel="True">
                            <chart:ChartAdornmentInfo.LabelTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Ellipse Height="20" Width="20" 
                                             Stroke="#FF1BA1E2" Fill="White" 
                                             StrokeThickness="2" 
                                             HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding}" Foreground="#576574" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               FontSize="10.5"/>
                                    </Grid>
                                </DataTemplate>
                            </chart:ChartAdornmentInfo.LabelTemplate>
                        </chart:ChartAdornmentInfo>
                    </chart:SplineAreaSeries.AdornmentsInfo>
                </chart:SplineAreaSeries>

            </chart:SfChart>

        </materialDesign:Card>



