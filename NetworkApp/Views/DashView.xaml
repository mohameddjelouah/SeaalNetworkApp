<!--/////////////////////chart for incident\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\--> 
   
                
                
                <materialDesign:Card Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="5" VerticalAlignment="Stretch"  materialDesign:ShadowAssist.ShadowDepth="Depth2" >



            <materialDesign:Card.Resources>
                

                    <DataTemplate x:Key="headerTemplate">
                        <TextBlock FontSize="14"  Margin="30 0 0 0" Foreground="Black"
                            Text="{Binding}"/>
                    </DataTemplate>

                    <DataTemplate x:Key="labelTemplate">
                        <TextBlock FontSize="12" Foreground="Black" 
                            Text="{Binding Path=LabelContent}"/>
                    </DataTemplate>

                    <Style TargetType="Line" x:Key="AxisStyle">
                        <Setter Property="Stroke" Value="DarkGray"  />
                        <Setter Property="StrokeThickness" Value="1"/>
                    </Style>

                
            </materialDesign:Card.Resources>

            <chart:SfChart x:Name="AreaChart" AreaBorderThickness="0" Margin="10" 
                       HorizontalAlignment="Center"  VerticalAlignment="Center">

                

                <chart:SfChart.PrimaryAxis>
                    <chart:CategoryAxis  
                                    LabelFormat="MMMyyyy" 
                                    PlotOffset="10"
                                    LabelTemplate="{StaticResource labelTemplate}" 
                                    HeaderTemplate="{StaticResource headerTemplate}" 
                                    AxisLineStyle="{StaticResource AxisStyle}"
                                    MajorTickLineStyle="{x:Null}">
                    </chart:CategoryAxis>
                </chart:SfChart.PrimaryAxis>

                <chart:SfChart.SecondaryAxis>
                    <chart:NumericalAxis Header="Number of people(in %)" 
                                    PlotOffset="10"
                                     HeaderTemplate="{StaticResource headerTemplate}" 
                                     LabelTemplate="{StaticResource labelTemplate}" 
                                     AxisLineStyle="{StaticResource AxisStyle}"
                                     MajorTickLineStyle="{x:Null}">
                    </chart:NumericalAxis>
                </chart:SfChart.SecondaryAxis>

                <chart:AreaSeries x:Name="AreaSeries" EnableAnimation="True"
                              XBindingPath="IncidentsDate" 
                              Label="Favourite Fruits"
                              YBindingPath="IncidentCount" 
                              ItemsSource="{Binding IncidentChart}" 
                              ShowTooltip="True" 
                              StrokeThickness="2"
                              Stroke="#FF1BA1E2"
                              Interior="#781BA1E2">

                    <chart:AreaSeries.AdornmentsInfo>
                        <chart:ChartAdornmentInfo AdornmentsPosition="Bottom"  
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              ShowLabel="True">
                            <chart:ChartAdornmentInfo.LabelTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Ellipse Height="20" Width="20" 
                                             Stroke="#FF1BA1E2" Fill="White" 
                                             StrokeThickness="2" 
                                             HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding}" Foreground="DimGray" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               FontFamily="Segoe UI"  FontSize="10.5"/>
                                    </Grid>
                                </DataTemplate>
                            </chart:ChartAdornmentInfo.LabelTemplate>
                        </chart:ChartAdornmentInfo>
                    </chart:AreaSeries.AdornmentsInfo>
                </chart:AreaSeries>

            </chart:SfChart>

        </materialDesign:Card>

        

