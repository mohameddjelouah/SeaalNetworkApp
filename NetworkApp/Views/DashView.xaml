                <ColumnDefinition Width="auto"></ColumnDefinition>

            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0" Grid.ColumnSpan="2" Margin="5" VerticalAlignment="Stretch"  materialDesign:ShadowAssist.ShadowDepth="Depth2"  >

                <materialDesign:Card.Resources>

                    <DataTemplate x:Key="labelTemplateX">
                        <TextBlock FontSize="12" Width="50" TextWrapping="Wrap"  
                            Text="{Binding Path=LabelContent}"/>
                    </DataTemplate>

                    <DataTemplate x:Key="labelTemplateY">
                        <TextBlock FontSize="12" Width="30" TextWrapping="Wrap"  
                            Text="{Binding Path=LabelContent}"/>
                    </DataTemplate>
                    
                    <Style TargetType="Line" x:Key="AxisStyle">
                        <Setter Property="Stroke" Value="#576574"  />
                        <Setter Property="StrokeThickness" Value="1"/>
                    </Style>


                </materialDesign:Card.Resources>

                <chart:SfChart  x:Name="SplineAreaChart2" AreaBorderThickness="0" Margin="10" 
                       HorizontalAlignment="Center"  VerticalAlignment="Center">

                    <chart:SfChart.Header>
                        <TextBlock FontSize="16" 
                           Margin="0,0,0,5">Nombre d'incidents</TextBlock>
                    </chart:SfChart.Header>

                    <chart:SfChart.PrimaryAxis >
                        
                        <chart:CategoryAxis  
                            
                            
                                       
                                    LabelPlacement="OnTicks"
                            
                                    MajorGridLineStyle="{x:Null}"    
                                    EdgeLabelsDrawingMode="Fit"
                                    LabelTemplate="{StaticResource labelTemplateX}" 
                            
                                    AxisLineStyle="{StaticResource AxisStyle}"
                                    MajorTickLineStyle="{x:Null}">

                        </chart:CategoryAxis>
                        
                    </chart:SfChart.PrimaryAxis>

                    <chart:SfChart.SecondaryAxis>
                        <chart:NumericalAxis 
                                     RangePadding="None"
                                     Minimum="0"
                                     PlotOffset="10"                                    
                                     LabelTemplate="{StaticResource labelTemplateY}" 
                                     AxisLineStyle="{StaticResource AxisStyle}"
                                     MajorTickLineStyle="{x:Null}">
                        </chart:NumericalAxis>
                    </chart:SfChart.SecondaryAxis>

                    <chart:ColumnSeries   x:Name="SplineAreaSeries2" EnableAnimation="True"
                              
                              YBindingPath="_4WeeksCount" 
                              
                              XBindingPath="Join"
                              Label="Nombre d'incident"
                              
                              
                              ItemsSource="{Binding Last4WeeksChart}" 
                              ShowTooltip="True" 
                              StrokeThickness="2"
                              Stroke="#FF1BA1E2"
                              Interior="#781BA1E2">
                        
                        <chart:ColumnSeries.AdornmentsInfo>
                            <chart:ChartAdornmentInfo AdornmentsPosition="Top"  
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              ShowLabel="True">
                                <chart:ChartAdornmentInfo.LabelTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Ellipse Height="20" Width="20" 
                                             Stroke="#FF1BA1E2" Fill="White" 
                                             StrokeThickness="2" 
                                             HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding}" Foreground="#576574" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               FontSize="10.5"/>
                                        </Grid>
                                    </DataTemplate>
                                </chart:ChartAdornmentInfo.LabelTemplate>
                            </chart:ChartAdornmentInfo>
                        </chart:ColumnSeries.AdornmentsInfo>
                    </chart:ColumnSeries>

                </chart:SfChart>









            </materialDesign:Card>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0"  Margin="5" VerticalAlignment="Stretch"  materialDesign:ShadowAssist.ShadowDepth="Depth2"  >






                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Margin="5 0 5 0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10 0 0 0">
                                <Image Width="30" Margin="0 0 5 0" Height="30" RenderOptions.BitmapScalingMode="HighQuality" Source="{StaticResource IntervantionChart2}"/>
                                <TextBlock TextWrapping="Wrap" FontSize="24" Text="2"></TextBlock>
                            </StackPanel>
                            <TextBlock TextWrapping="Wrap" FontSize="15" HorizontalAlignment="Right" Margin="0 0 20 0" Text="Intervention Hier"></TextBlock>
                        </StackPanel>
                        <Separator Grid.Row="1" Background="LightGray" Margin="30 0" Height="auto" Style="{StaticResource MaterialDesignSeparator}"/>
                        <StackPanel Grid.Row="2"   VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin=" 5 0 0 0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10 0 0 0">
                                <Image Width="30" Margin="0 0 5 0" Height="30" RenderOptions.BitmapScalingMode="HighQuality" Source="{StaticResource IncidentChart}"/>
                                <TextBlock x:Name="Dash_IncidentYesterday" TextWrapping="Wrap" FontSize="24"></TextBlock>
                            </StackPanel>
                            <TextBlock TextWrapping="Wrap" FontSize="15" HorizontalAlignment="Right" Margin="0 0 20 0" Text="Incident Hier"></TextBlock>
                        </StackPanel>
                       
                    </Grid>
                    
                    
                    
                    
                    
                </materialDesign:Card>

                <materialDesign:Card Grid.Row="1"  Margin="5" VerticalAlignment="Stretch"  materialDesign:ShadowAssist.ShadowDepth="Depth2"  >

                    <StackPanel Grid.Row="0"  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Margin="5 0 0 0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10 0 0 0">
                            <Image Width="30" Margin="0 0 5 0" Height="30" RenderOptions.BitmapScalingMode="HighQuality" Source="{StaticResource Site}"/>
                            <TextBlock x:Name="Dash_Sites" TextWrapping="Wrap" FontSize="24" ></TextBlock>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" FontSize="15" HorizontalAlignment="Right" Margin="0 0 20 0" Text="Site Enregestré"></TextBlock>
                    </StackPanel>

                </materialDesign:Card>
            </Grid>

        </Grid>


        <!--<Button x:Name="test"/>-->











    </Grid>



    <!--</Grid>-->


</UserControl>
